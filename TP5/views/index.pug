extends layout

block content
  .w3-container.w3-blue
    h1 Add Task
    form(action="/add" method="POST")
      label Tarefa
      input.w3-input.w3-round(type="text" name="what" required)
      label Autor 
      input.w3-input.w3-round(type="text" name="who" required)
      label Data Limit
      input.w3-input.w3-round(type="date" name="dateDued" required)
      button.w3-btn.w3-purple.w3-mb-2(type="submit") +
  .w3-cell-row.w3-red
    .w3-container.w3-cell.w3-gray
      h1 ToDo Tasks 
      table.w3-table-all 
        tr
          th Tarefa 
          th Data Limit 
          th Autor 
          th 
          th 
          th 
        each tt in tts
          tr
            td=tt.what 
            td=tt.dateDued 
            td=tt.who 
            td 
              form(action="/done_task/"+tt.id method="GET")
                button.w3-btn.w3-purple.w3-mb-2(type="submit") ->
            td
              form(action="/delete_todotask/"+tt.id method="GET")
                button.w3-btn.w3-purple.w3-mb-2(type="submit") -
            td
              form(action="/edit_form" method="POST")
                input(type="hidden" name="id" value=tt.id)
                input(type="hidden" name="from" value="todo_tasks")
                button.w3-btn.w3-purple.w3-mb-2(type="submit") Edit
    .w3-container.w3-cell.w3-gray
      h1 Done Tasks
      table.w3-table-all
        tr
          th Tarefa
          th Autor
          th 
          th 
          th
        each dt in dts 
          tr 
            td=dt.what 
            td=dt.who 
            td 
              form(action="/undone_task/"+dt.id method="GET")
                button.w3-btn.w3-purple.w3-mb-2(type="submit") <-
            td 
              form.w3-cell(action="/delete_donetask/"+dt.id method="GET")
                button.w3-btn.w3-purple.w3-mb-2(type="submit") -
            td
              form(action="/edit_form" method="POST")
                input(type="hidden" name="id" value=dt.id)
                input(type="hidden" name="from" value="done_tasks")
                button.w3-btn.w3-purple.w3-mb-2(type="submit") Edit
  .w3-container.w3-gray
    h1
  footer.w3-container.w3-blue 
    h5 Generated by RPCW2023-TP5 in #{d}