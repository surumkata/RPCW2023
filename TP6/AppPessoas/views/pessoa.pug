extends layout 
block content 

    .w3-card-4
        header.w3-container.w3-purple
            h2 Person Record
        div.w3-container
          fieldset
            legend Metadata
            label #[b Id*: ] #{p.id} 
            br
            label #[b Name*: ] #{ p.nome }
            br
            label #[b Age*: ] #{ p.idade}
            br
            label #[b Sexo*: ] 
            if p.sexo=='masculino'
              a male
            if p.sexo=='feminino'
              a female
            if p.sexo=='outro'
              a other
            br
            label #[b BI*: ] #{ p.BI}
            br
            if p.morada
                label #[b District*: ] #{ p.morada.distrito}
                br
                label #[b City: ] #{ p.morada.cidade}
                br

            label #[b Profession*: ] #{ p.profissao}
            br
            label 
                b Political Party
            div.w3-container
                if p.partido_politico
                    label Abreviation:
                    a= p['partido_politico']['party_abbr']
                    br
                    label Name: 
                    a= p['partido_politico']['party_name']
                    br
            label #[b Religion: ] #{ p.religiao}
            br
            label 
              b Sports List
            ul
              each e in p.desportos
                li= e
            label 
              b Pets List
            ul
              each e in p.animais
                li= e
            label 
              b Public figures List
            ul
              each e in p.figura_publica_pt
                li= e
            label #[b Car Brand: ] #{ p.marca_carro}
            br
            label 
                b Favorite destinations List
            ul
              each dest in p.destinos_favoritos
                li= dest
            if p.atributos
                label 
                    b Attributes List
                    ul
                    div.w3-container
                        if p.atributos.fumador
                          li 
                            label Smoker
                        if p.atributos.gosta_cinema
                          li 
                            label Likes Cinema
                        if p.atributos.gosta_viajar
                          li 
                            label Likes to Travel
                        if p.atributos.acordar_cedo
                          li 
                            label Wakes Early
                        if p.atributos.gosta_ler
                          li 
                            label Likes to Read
                        if p.atributos.gosta_musica
                          li 
                            label Likes Music
                        if p.atributos.gosta_comer
                          li 
                            label Likes to Eat
                        if p.atributos.gosta_animais_estimacao
                          li 
                            label Likes Pets
                        if p.atributos.gosta_dancar
                          li 
                            label Likes to Dance
                        label Favorite Food: #{p.atributos.comida_favorita}

               
        footer.w3-container.w3-purple
            h5 Generated by EngWeb2023 in #{d} - [#[a(href="/") Return]]