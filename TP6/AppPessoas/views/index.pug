extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 People List #[a.w3-btn.w3-round.w3-grey(href="/people/registo") + ]
    .w3-container
      table.w3-table-all
        tr
          th Name
          th Age
          th Sex
          th BI
          th District
          th Profession
          th Actions
        
        each s in slist
          tr
            td 
              a(href="/people/"+s.id)= s.nome         
            td= s.idade
            td= s.sexo
            td= s.BI
            if s.morada
              td= s.morada.distrito

            td= s.profissao
            td
              button.w3-btn.w3-round.w3-indigo.w3-margin-right 
                a(href="/people/edit/"+s.id) Edit
              button.w3-btn.w3-round.w3-indigo.w3-margin-right  
                a(href="/people/delete/"+s.id) Delete
              
    footer.w3-container.w3-teal
      h5 Generated by RPCW2023 in #{d}